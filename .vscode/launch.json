{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Frontend",
      "program": "${workspaceFolder}/frontend/app.js",
      "cwd": "${workspaceFolder}/frontend",
      "env": {
        "NODE_ENV": "development",
        "BACKEND_API_URL": "http://127.0.0.1:8080"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "wait-for-backend"
    },
    {
      "name": "Run Backend (Go)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/server/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {},
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Frontend Tests (Jest)",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand",
        "--config=${workspaceFolder}/jest.config.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Deploy Agent",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/app.js",
      "preLaunchTask": "deploy-agent",
      "runtimeArgs": [
        "--version"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Run Full Stack",
      "configurations": [
        "Run Backend (Go)",
        "Run Frontend"
      ]
    }
  ]
}