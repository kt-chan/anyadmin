extends layout.pug

block content
  #app-container(class="min-h-screen flex")
    include includes/sidebar.pug
    
    main(class="ml-64 flex-1 p-8 bg-slate-50 min-h-screen")
      #page-import.page-content.active
        header(class="flex justify-between items-center mb-8")
          div
            h2(class="text-2xl font-bold text-slate-800") 批量文件导入
            p(class="text-slate-500 text-sm") 管理基于本地路径和对象存储的文件导入任务
          div(class="flex gap-3")
            button(class="bg-white border px-4 py-2 rounded-lg text-sm font-bold hover:bg-slate-50 text-slate-700 shadow-sm", onclick="toggleGlobalPause(event)")
              i(class="fas fa-pause-circle mr-2 text-orange-500")
              | 全局暂停
            button(class="bg-white border px-4 py-2 rounded-lg text-sm font-bold hover:bg-slate-50 text-slate-700 shadow-sm", onclick="restartFailedTasks()")
              i(class="fas fa-redo mr-2 text-blue-500")
              | 重试失败任务
            button(class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-blue-700 transition shadow-sm", onclick="showModal('createTaskModal')")
              i(class="fas fa-plus mr-2")
              | 新建导入任务

        //- Stats Cards
        .grid.grid-cols-4.gap-6.mb-8
          .bg-white.p-5.rounded-xl.shadow-sm.border.border-slate-200.flex.items-center.justify-between
            div
              p(class="text-xs font-bold text-slate-400 uppercase") 总任务数
              h3(class="text-2xl font-bold text-slate-800")= stats.totalTasks
            i(class="fas fa-tasks text-slate-200 text-3xl")
          
          .bg-white.p-5.rounded-xl.shadow-sm.border.border-slate-200.flex.items-center.justify-between
            div
              p(class="text-xs font-bold text-slate-400 uppercase") 处理中
              h3(class="text-2xl font-bold text-blue-600")= stats.processing
            i(class="fas fa-spinner fa-spin text-blue-100 text-3xl")

          .bg-white.p-5.rounded-xl.shadow-sm.border.border-slate-200.flex.items-center.justify-between
            div
              p(class="text-xs font-bold text-slate-400 uppercase") 已处理文件
              h3(class="text-2xl font-bold text-green-600")= stats.processedFiles
              span(class="text-xs text-slate-400") / #{stats.totalFiles}
            i(class="fas fa-file-check text-green-100 text-3xl")

          .bg-white.p-5.rounded-xl.shadow-sm.border.border-slate-200.flex.items-center.justify-between
            div
              p(class="text-xs font-bold text-slate-400 uppercase") 失败任务
              h3(class="text-2xl font-bold text-red-500")= stats.failed
            i(class="fas fa-exclamation-circle text-red-100 text-3xl")

        //- Tasks List
        .bg-white.rounded-2xl.shadow-sm.border.border-slate-200.overflow-hidden
          .px-6.py-4.border-b.border-slate-100.flex.justify-between.items-center
            h3(class="font-bold text-lg text-slate-700") 活跃任务列表
            .flex.gap-2
              button(class="text-xs bg-slate-100 text-slate-600 px-3 py-1.5 rounded font-bold hover:bg-slate-200 transition", onclick="refreshTasks()")
                i(class="fas fa-sync-alt mr-1")
                | 刷新列表

          table(class="w-full text-left text-sm")
            thead(class="bg-slate-50 text-slate-500 font-bold uppercase text-xs border-b border-slate-100")
              tr
                th(class="px-6 py-4") 任务名称 / ID
                th(class="px-6 py-4") 来源 & 路径
                th(class="px-6 py-4") 进度 (Total/Processed)
                th(class="px-6 py-4") 周期 & 扫描
                th(class="px-6 py-4") 状态
                th(class="px-6 py-4 text-right") 操作
            
            tbody.divide-y.divide-slate-50
              each task in tasks
                tr(class="hover:bg-slate-50 transition")
                  td(class="px-6 py-4")
                    div(class="font-bold text-slate-800")= task.name
                    div(class="text-xs text-slate-400 font-mono")= task.id
                  
                  td(class="px-6 py-4")
                    div.flex.items-center.gap-2
                      if task.sourceType === 'S3'
                        span(class="bg-orange-100 text-orange-600 px-1.5 py-0.5 rounded text-[10px] font-bold") S3
                      else if task.sourceType === 'NFS'
                        span(class="bg-blue-100 text-blue-600 px-1.5 py-0.5 rounded text-[10px] font-bold") NFS
                      else
                        span(class="bg-slate-100 text-slate-600 px-1.5 py-0.5 rounded text-[10px] font-bold") LOCAL
                      
                      span(class="text-xs font-mono text-slate-600 truncate max-w-[150px]", title=task.sourcePath)= task.sourcePath

                  td(class="px-6 py-4")
                    - const percent = task.progress.total > 0 ? Math.round((task.progress.processed / task.progress.total) * 100) : 0
                    div(class="w-32")
                      div(class="flex justify-between text-xs mb-1")
                        span(class="font-bold text-slate-700") #{percent}%
                        span(class="text-slate-400") #{task.progress.processed}/#{task.progress.total}
                      div(class="w-full bg-slate-100 rounded-full h-1.5 overflow-hidden")
                        if task.status === 'FAILED'
                           div(class="bg-red-500 h-1.5 rounded-full", style=`width: ${percent}%`)
                        else
                           div(class="bg-blue-500 h-1.5 rounded-full", style=`width: ${percent}%`)
                    if task.progress.failed > 0
                       div(class="text-[10px] text-red-500 mt-1 font-bold") #{task.progress.failed} 失败

                  td(class="px-6 py-4")
                    div(class="text-xs font-bold text-slate-700")= task.schedule
                    div(class="text-[10px] text-slate-400 mt-0.5") Next: #{task.nextScan}

                  td(class="px-6 py-4")
                    if task.status === 'PROCESSING'
                      span(class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-blue-50 text-blue-600 border border-blue-100")
                        span(class="relative flex h-2 w-2")
                          span(class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75")
                          span(class="relative inline-flex rounded-full h-2 w-2 bg-blue-500")
                        | Runing
                    else if task.status === 'PAUSED'
                      span(class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-amber-50 text-amber-600 border border-amber-100")
                        i(class="fas fa-pause text-[10px]")
                        | Paused
                    else if task.status === 'FAILED'
                      span(class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-red-50 text-red-600 border border-red-100")
                        i(class="fas fa-times text-[10px]")
                        | Failed
                    else if task.status === 'PENDING'
                       span(class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-slate-100 text-slate-600 border border-slate-200")
                        i(class="fas fa-clock text-[10px]")
                        | Pending
                    else
                      span(class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-green-50 text-green-600 border border-green-200")
                         i(class="fas fa-check text-[10px]")
                         | #{task.status}

                  td(class="px-6 py-4 text-right")
                    div(class="flex items-center justify-end gap-2")
                      if task.status === 'PROCESSING'
                        button(class="p-1.5 text-slate-400 hover:text-orange-500 hover:bg-orange-50 rounded transition", onclick=`operateTask('${task.id}', 'pause')`, title="暂停")
                          i(class="fas fa-pause")
                      else
                        button(class="p-1.5 text-slate-400 hover:text-green-500 hover:bg-green-50 rounded transition", onclick=`operateTask('${task.id}', 'resume')`, title="启动/恢复")
                          i(class="fas fa-play")
                      
                      if task.status === 'FAILED' || task.progress.failed > 0
                        button(class="p-1.5 text-slate-400 hover:text-blue-500 hover:bg-blue-50 rounded transition", onclick=`operateTask('${task.id}', 'retry')`, title="重试失败")
                          i(class="fas fa-redo")
                      
                      button(class="p-1.5 text-slate-400 hover:text-red-500 hover:bg-red-50 rounded transition", onclick=`operateTask('${task.id}', 'delete')`, title="删除")
                        i(class="fas fa-trash")

    //- Create Task Modal
    div#createTaskModal(class="fixed inset-0 z-50 hidden")
      div(class="absolute inset-0 bg-slate-900/50 backdrop-blur-sm", onclick="hideModal('createTaskModal')")
      div(class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-lg bg-white rounded-2xl shadow-2xl overflow-hidden animate-in fade-in zoom-in duration-200")
        .px-6.py-4.border-b.border-slate-100.flex.justify-between.items-center
          h3(class="font-bold text-lg text-slate-800") 新建导入任务
          button(class="text-slate-400 hover:text-slate-600", onclick="hideModal('createTaskModal')")
            i(class="fas fa-times")
        
        .p-6.space-y-4
          div
            label(class="block text-xs font-bold text-slate-700 mb-1.5") 任务名称
            input#newTaskName(type="text", class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none", placeholder="例如: 每日文档同步")

          div
            label(class="block text-xs font-bold text-slate-700 mb-1.5") 来源类型
            div.flex.gap-4
              label(class="flex items-center gap-2 cursor-pointer")
                input(type="radio", name="sourceType", value="LOCAL", class="text-blue-600 focus:ring-blue-500", checked)
                span(class="text-sm text-slate-700") 本地/挂载卷 (Local/NFS)
              label(class="flex items-center gap-2 cursor-pointer")
                input(type="radio", name="sourceType", value="S3", class="text-blue-600 focus:ring-blue-500")
                span(class="text-sm text-slate-700") 对象存储 (S3)

          div
            label(class="block text-xs font-bold text-slate-700 mb-1.5") 路径 / Bucket URI
            input#newTaskPath(type="text", class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm font-mono focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none", placeholder="/mnt/data/docs 或 s3://my-bucket/path")

          div
            label(class="block text-xs font-bold text-slate-700 mb-1.5") 扫描更新周期
            select#newTaskSchedule(class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm bg-white focus:ring-2 focus:ring-blue-500 outline-none")
              option(value="REALTIME") 实时监控 (Real-time)
              option(value="HOURLY") 每小时 (Hourly)
              option(value="DAILY") 每天 (Daily)
              option(value="WEEKLY") 每周 (Weekly)
              option(value="MONTHLY") 每月 (Monthly)
              option(value="MANUAL") 仅手动 (Manual)
            p(class="text-[10px] text-slate-400 mt-1") *基于文件名称及修改时间(mtime)检测变更

        .px-6.py-4.bg-slate-50.border-t.border-slate-100.flex.justify-end.gap-3
          button(class="px-4 py-2 text-sm font-bold text-slate-600 hover:bg-slate-200 rounded-lg transition", onclick="hideModal('createTaskModal')") 取消
          button(class="px-4 py-2 text-sm font-bold text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition shadow-md", onclick="submitNewTask()") 创建任务

  script(src="/js/import.js")
  //- Reuse modal logic from main.js or include here if needed
  script.
    function showModal(id) { document.getElementById(id).classList.remove('hidden'); }
    function hideModal(id) { document.getElementById(id).classList.add('hidden'); }